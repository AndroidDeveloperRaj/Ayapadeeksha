<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activities.LocationActivity"
    tools:showIn="@layout/activity_location">

    <android.support.v7.widget.CardView
        android:id="@+id/cvCurrentLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="2dp"
        app:cardUseCompatPadding="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_my_location"
            android:drawablePadding="@dimen/padding_16dp"
            android:padding="@dimen/padding_10dp"
            android:text="Use Current Location"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/tvSize_16dp"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="2dp"
        app:cardUseCompatPadding="true">

        <AutoCompleteTextView
            android:id="@+id/aCTVLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:completionHintView="@layout/auto_complete_background"
            android:drawableLeft="@drawable/ic_search"
            android:hint="Search My Location"
            android:drawableRight="@drawable/ic_right_arrow_green"
            android:singleLine="true"
            android:padding="@dimen/padding_10dp"
            android:drawablePadding="@dimen/padding_16dp"
            android:textColor="@color/colorBlack" />

    </android.support.v7.widget.CardView>
</LinearLayout>