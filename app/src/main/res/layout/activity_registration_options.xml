<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.RegistrationOptionsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorViolet"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Register With Any One Of the following Options."
            android:textSize="24dp"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            />

    <Button
        android:id="@+id/register_manually_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register Manually"
        android:background="@color/colorPrimary"
        android:textAllCaps="false"
        android:layout_alignParentTop="true"
        android:layout_marginTop="130dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="18dp"
        android:textColor="@color/colorWhite"
        />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="18dp"
        android:background="@color/colorSkyBlue"
        />

    <Button
        android:id="@+id/fb_register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register with Facebook"
        android:background="@color/colorLightGreen"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="130dp"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="18dp"
        />

    </LinearLayout>

</RelativeLayout>